apply plugin: 'com.android.application'

android {
    compileSdkVersion 23
    buildToolsVersion "24.0.1"
    defaultConfig {
        applicationId "@APP_PACKAGE@"
        minSdkVersion 21
        targetSdkVersion 22
        versionCode @VERSION_CODE@
        versionName "@VERSION_MAJOR@.@VERSION_MINOR@(@VERSION_TAG@)"
    }
    buildTypes {
        release {
            minifyEnabled false
            proguardFiles getDefaultProguardFile('proguard-android.txt'), 'proguard-rules.pro'
        }
    }

    sourceSets {
        main {
            manifest.srcFile 'AndroidManifest.xml'
            java.srcDirs = ['src/org/xbmc/kodi']
            res.srcDirs = ['res']
            assets.srcDirs = ['assets']
            jniLibs.srcDirs = ['lib']
        }
    }

    externalNativeBuild {
        cmake {
            path '../../../../../project/cmake/CMakeLists.txt'
        }
    }
}

project.afterEvaluate {
    preBuild.dependsOn
}

