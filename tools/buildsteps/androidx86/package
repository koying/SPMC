WORKSPACE=${WORKSPACE:-$( cd $(dirname $0)/../../.. ; pwd -P )}
XBMC_PLATFORM_DIR=android
. $WORKSPACE/tools/buildsteps/defaultenv

if [ "x$BUILD_OBB" == "xtrue" ]; then
  TARGET=apk-obb-unsigned
else
  TARGET=apk-unsigned
fi

cd $WORKSPACE/build;make -j$BUILDTHREADS $TARGET
$RUN_SIGNSTEP

cd $WORKSPACE

#rename for upload
#e.x. xbmc-20130314-8c2fb31-Frodo-x86.apk
UPLOAD_FILENAME="spmc-$(getBuildRevDateStr)-x86"
mv spmcapp-x86-*.apk $UPLOAD_FILENAME.apk
if [ -f *.obb ] 
then
  mv *.obb $UPLOAD_FILENAME.obb
fi
if [ -f *.symbols*.tar.bz2 ]
then
  mv tools/android/packaging/*.symbols*.tar.bz2 $WORKSPACE/
fi
